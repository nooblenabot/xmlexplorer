<UserControl x:Class="XmlExplorer.Controls.SettingsHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="auto" Width="auto">
    <Grid>
        <Border Padding="3" BorderThickness="1" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}">
            <TextBlock TextWrapping="Wrap" Margin="3">
                <Bold>Please note:</Bold><LineBreak />
                Some setting changes are not applied until the application is restarted.<LineBreak />
                <Run Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}">Disabled settings</Run> must be changed in the <Hyperlink Click="HyperlinkBrowse_Click">application config file</Hyperlink>.
            </TextBlock>
        </Border>
    </Grid>
</UserControl>
